 console.log(`${name}-зарплата ${obj[name]} долларов`);
    };

// задача 5.
let n = 1000;
let num =0;
while (n>50) {
    n=n/2;
    console.log(n);
    num=num+1;
    console.log(num)
};

// задача 6.
let friday = 1;
while (friday<31) {
    friday=friday+7;
    console.log(`Сегодня пятница, ${friday}-е число. Необходимо подготовить отчет.`)
};







